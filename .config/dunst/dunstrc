[global]

    # markup = full
    allow_markup = yes

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    # Markup is allowed
    format = "<b>%s</b>\n%b"

    # monitor = 0
    follow = mouse
    # geometry = "300x5-30+50"
    geometry = "350x5-20+45"
    indicate_hidden = yes
    shrink = yes
    transparency = 0
    notification_height = 0
    separator_height = 2
    padding = 4
    horizontal_padding = 8

    separator_color = frame
    sort = yes
    idle_threshold = 120

    font = JetBrains 10
    line_height = 0

    alignment = left
    show_age_threshold = 60
    bounce_freq = 0
    word_wrap = yes

    ignore_newline = no
    # Stack together notifications with the same content
    stack_duplicates = true

    # Hide the count of stacked notifications with the same content
    hide_duplicate_count = true

    # Display indicators for URLs (U) and actions (A).
    show_indicators = yes

    icon_position = off
    # Paths to default icons.
    icon_path = /usr/share/icons/ePapirus/16x16/status/:/usr/share/icons/ePapirus/16x16/mimetypes/:/usr/share/icons/ePapirus/16x16/devices/:/usr/share/icons/ePapirus/16x16/emblems/

    sticky_history = yes
    history_length = 20
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    # dmenu = /usr/bin/rofi -dmenu -p dunst:

    browser = /usr/bin/firefox -new-tab

    # Define the title of the windows spawned by dunst
    title = Dunst

    # Define the class of the windows spawned by dunst
    class = Dunst

    corner_radius = 0

    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all
[frame]
    width = 3
    color = "#dab997"

[shortcuts]
    # Close notification.
    close = ctrl+space
    # Close all notifications.
    close_all = ctrl+shift+space
    history = ctrl+dead_acute
    # Context menu.
    context = ctrl+shift+period

    [urgency_low]
    frame_color = "#5E81AC"
    background = "#3B4252"
    foreground = "#ECEFF4"
    timeout = 3

    [urgency_normal]
    frame_color = "#5E81AC"
    background = "#3B4252"
    foreground = "#ECEFF4"
    timeout = 3

    [urgency_critical]
    frame_color = "#D08770"
    background = "#3B4252"
    foreground = "#ECEFF4"
    timeout = 3

vim: ft=cfg
