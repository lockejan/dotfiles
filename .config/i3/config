# vim: filetype=i3config
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
set $mod Mod4

# Hide borders
hide_edge_borders smart

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Overpass Display, FontAwesome5Free, FontAwesome5Brands 13

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
set $term $TERMINAL
bindsym $mod+Return exec $term

# quick ws toggle
workspace_auto_back_and_forth yes

# move focus on activation
focus_on_window_activation focus
focus_follows_mouse yes

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $Locker blurlock
set $mode_system (l)ock, (e)xit, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# init dropdown windows
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] move scratchpad
exec --no-startup-id $term --class dropdown -e tmux
bindsym $mod+u [instance="dropdown"] scratchpad show

# Colors
set_from_resource $nord1 color0 #000000
set_from_resource $nord3 color8 #000000
set_from_resource $nord5 color7 #000000
set_from_resource $nord6 color15 #000000
set_from_resource $nord7 color14 #000000
set_from_resource $nord8 color6 #000000
set_from_resource $nord9 color12 #000000
set_from_resource $nord11 color9 #000000
set_from_resource $nord13 color11 #000000
set_from_resource $nord14 color10 #000000
set_from_resource $nord15 color13 #000000

set_from_resource $nord4  foreground #000000
set_from_resource $nord0  background #000000

set $nord0   #2E3440
set $nord1   #3B4252
set $nord2   #434C5E
set $nord3   #4C566A
set $nord4   #D8DEE9
set $nord5   #E5E9F0
set $nord6   #ECEFF4
set $nord7   #8FBCBB
set $nord8   #88C0D0
set $nord9   #81A1C1
set $nord10  #5E81AC
set $nord11  #BF616A
set $nord12  #D08770
set $nord13  #EBCB8B
set $nord14  #A3BE8C
set $nord15  #B48EAD

# Colors setup
# class                 border  backgr. text    indicator child_border
client.focused          $nord3  $nord9  $nord0    $nord13   $nord10
client.focused_inactive $nord0  $nord3  $nord6    $nord7    $nord0
client.unfocused        $nord0  $nord0  $nord3    $nord7    $nord1
client.urgent           $nord11 $nord11 $nord0    $nord11   $nord11
client.placeholder      $nord8  $nord0  $nord15   $nord0    $nord0
client.background       $nord0

# status bar settings
bar {
    colors {
            background  $nord0
            statusline  $nord8
            separator   $nord6
            # class            border   backgr. text
            focused_workspace  $nord0   $nord0  $nord14
            active_workspace   $nord0   $nord0  $nord12
            inactive_workspace $nord0   $nord0  $nord3
            urgent_workspace   $nord11  $nord0  $nord11
            binding_mode       $nord0   $nord0  $nord14
           }
    separator_symbol " | "
    tray_output none
    position top
    status_command py3status --dbus-notify
}

# hotkeys to open apps with symboled keys
bindcode 148 exec gnome-calculator
bindcode 180 exec firefox

# i3-gaps conf
for_window [class=".*"] border pixel 3
# gaps inner 7
# gaps outer 7
# smart_gaps on
smart_borders on

# workspace assign for apps
# assign [class="firefox|firefoxdeveloperedition" window_role="browser"] 2
# assign [class="code-oss" window_role="browser-window"] 3
# assign [class="jetbrains-.*"] 3
assign [class="discord"] 7
for_window [class="Gnome-pomodoro"] floating enable focus
for_window [class="Pomodoro"] floating enable
for_window [class="Gnome-calculator"] floating enable focus
for_window [class="vlc"] floating enable
for_window [class="jetbrains-.*" title="win0"] floating enable
for_window [class="^jetbrains-.+"][window_type=dialog] focus
for_window [class="Yad"] floating enable

# Startup Apps
exec --no-startup-id nextcloud &
exec --no-startup-id sxhkd -m -1 &
exec --no-startup-id greenclip daemon
# exec --no-startup-id nm-applet
# exec --no-startup-id blueman-applet
# exec --no-startup-id imwheel -b 45
exec_always --no-startup-id feh --bg-fill ~/Pictures/Wallpaper/matterhorn-big.jpg
